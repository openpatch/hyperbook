{
  "name": "@hyperbook/markdown",
  "version": "0.8.1",
  "author": "Mike Barkmin",
  "homepage": "https://github.com/openpatch/hyperbook#readme",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js",
    "./index.css": "./dist/index.css",
    "./katex.css": "./dist/assets/katex.min.css"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openpatch/hyperbook.git",
    "directory": "packages/markdown"
  },
  "bugs": {
    "url": "https://github.com/openpatch/hyperbook/issues"
  },
  "scripts": {
    "version": "pnpm build",
    "lint": "tsc --noEmit",
    "test": "vitest",
    "build": "rimraf dist && pnpm build:pkg && pnpm build:types",
    "build:pkg": "node ../../scripts/build.mjs && cp -r assets dist/",
    "build:types": "tsc --project tsconfig.build.json --declaration --emitDeclarationOnly"
  },
  "dependencies": {
    "@hyperbook/provider": "workspace:*",
    "@hyperbook/drawer": "workspace:*",
    "mdast-util-to-hast": "^12.3.0",
    "mdast-util-to-string": "^3.2.0",
    "rehype-highlight": "5.0.2",
    "rehype-katex": "6.0.3",
    "rehype-parse": "^8.0.4",
    "rehype-raw": "^6.1.1",
    "rehype-react": "^7.2.0",
    "remark-directive": "2.0.1",
    "remark-directive-rehype": "0.4.2",
    "remark-gemoji": "7.0.1",
    "remark-math": "5.1.1",
    "remark-stringify": "^10.0.3",
    "remark-unwrap-images": "3.0.1",
    "unist-util-visit": "^4.1.1",
    "unified": "^10.1.2"
  },
  "peerDependencies": {
    "react": "18.x",
    "react-dom": "18.x"
  },
  "devDependencies": {
    "@types/hast": "2.3.4",
    "@types/mdast": "^3.0.11",
    "@types/react": "18.2.12",
    "@types/react-dom": "18.2.5",
    "@types/unist": "2.0.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "rehype-stringify": "^9.0.3",
    "remark-gfm": "3.0.1",
    "remark-parse": "^10.0.1",
    "remark-rehype": "^10.1.0",
    "vitest": "^0.30.0"
  }
}
