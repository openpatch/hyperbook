{
  "name": "hyperbook-studio",
  "private": true,
  "publisher": "openpatch",
  "displayName": "Hyperbook",
  "description": "Extension for showing markdownfiles using the Hyperbook markdown renderer.",
  "icon": "assets/images/hyperbook-logo.png",
  "repository": {
    "url": "https://github.com/openpatch/hyperbook/",
    "directory": "packages/vscode-extension"
  },
  "homepage": "https://hyperbook.openpatch.org",
  "main": "./out/extension.js",
  "version": "0.49.12",
  "engines": {
    "vscode": "^1.71.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "vscode",
    "vscode-extension",
    "hyperbook"
  ],
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:**/hyperbook.json",
    "onLanguage:markdown",
    "onLanguage:handlebars"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Hyperbook",
      "order": 20,
      "properties": {
        "hyperbook.root": {
          "type": "string",
          "default": "",
          "description": "The root folder of your hyperbook project. You need to set this, if your hyperbook is located in a subfolder of your workspace folder."
        }
      }
    },
    "commands": [
      {
        "command": "hyperbook.sidePreview",
        "title": "Show Side Preview",
        "category": "Hyperbook",
        "icon": {
          "light": "./assets/icons/PreviewOnRightPane_16x.svg",
          "dark": "./assets/icons/PreviewOnRightPane_16x_dark.svg"
        }
      },
      {
        "command": "hyperbook.startDevServer",
        "title": "Start Dev Server",
        "category": "Hyperbook"
      },
      {
        "command": "hyperbook.new",
        "title": "Create New Hyperbook",
        "category": "Hyperbook"
      },
      {
        "command": "hyperbook.openIndexMd",
        "title": "Open book/index.md",
        "category": "Hyperbook"
      },
      {
        "command": "hyperbook.createNewPage",
        "title": "Create New Page in Book Folder",
        "category": "Hyperbook"
      },
      {
        "command": "hyperbook.openDocumentation",
        "title": "Open Hyperbook Documentation",
        "category": "Hyperbook"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "hyperbook.sidePreview",
          "when": "(editorLangId == markdown || editorLangId == handlebars ) && config.hyperbook.preview.showPreviewOptionInMenuBar",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "hyperbook.sidePreview",
        "key": "ctrl+q s",
        "mac": "cmd+q s",
        "when": "editorTextFocus"
      }
    ],
    "snippets": [
      {
        "language": "markdown",
        "path": "./snipptes/hyperbook.code-snippets"
      },
      {
        "language": "handlebars",
        "path": "./snipptes/hyperbook.code-snippets"
      }
    ],
    "grammars": [
      {
        "scopeName": "markdown.hyperbook",
        "path": "./syntaxes/hyperbook.json",
        "injectTo": [
          "text.html.markdown",
          "text.html.handlebars"
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": [
          "hyperbook.json"
        ],
        "url": "./schemas/hyperbook.schema.json"
      },
      {
        "fileMatch": [
          "hyperlibrary.json"
        ],
        "url": "./schemas/hyperlibrary.schema.json"
      }
    ],
    "walkthroughs": [
      {
        "id": "hyperbook.gettingStarted",
        "title": "Getting Started with Hyperbook",
        "description": "Learn how to create and edit your first Hyperbook.",
        "steps": [
          {
            "id": "createHyperbook",
            "title": "Create a new Hyperbook",
            "description": "Create your first Hyperbook project with all necessary files and folders.\n[Create Hyperbook](command:hyperbook.new)",
            "media": {
              "markdown": "assets/walkthrough/create-hyperbook.md"
            }
          },
          {
            "id": "editIndexMd",
            "title": "Edit index.md",
            "description": "Open and edit the main page of your book. This is the first page users will see.\n[Open index.md](command:hyperbook.openIndexMd)",
            "media": {
              "markdown": "assets/walkthrough/edit-index.md"
            },
            "completionEvents": [
              "onCommand:hyperbook.openIndexMd"
            ]
          },
          {
            "id": "createNewPage",
            "title": "Create a new page",
            "description": "Add a new page to your book to organize your content.\n[Create new page](command:hyperbook.createNewPage)",
            "media": {
              "markdown": "assets/walkthrough/create-page.md"
            },
            "completionEvents": [
              "onCommand:hyperbook.createNewPage"
            ]
          },
          {
            "id": "insertSnippet",
            "title": "Insert a snippet",
            "description": "Use snippets to quickly add Hyperbook elements like alerts, videos, and more. Type `:` in a markdown file to see available snippets.\n[Open Snippet Documentation](https://hyperbook.openpatch.org)",
            "media": {
              "markdown": "assets/walkthrough/insert-snippet.md"
            }
          },
          {
            "id": "changeFrontmatter",
            "title": "Change page frontmatter",
            "description": "Customize your page by editing the frontmatter at the top of any markdown file. You can set the title, description, and more.",
            "media": {
              "markdown": "assets/walkthrough/frontmatter.md"
            }
          },
          {
            "id": "done",
            "title": "You're all set! ðŸŽ‰",
            "description": "Congratulations! You've learned the basics of Hyperbook. Now you can:\n- Use the preview to see your changes\n- Explore more snippets and elements\n- Deploy your Hyperbook online\n[Open Documentation](command:hyperbook.openDocumentation)",
            "media": {
              "markdown": "assets/walkthrough/done.md"
            }
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm compile",
    "vscode:package": "vsce package",
    "vscode:publish": "vsce publish --packagePath $(find . -iname *.vsix)",
    "ovsx:publish": "ovsx publish $(find . -iname *.vsix)",
    "build": "npm-run-all compile:*",
    "compile": "npm-run-all compile:*",
    "compile:extension": "webpack  --config ./webpack.extension.config.js --mode production",
    "compile:schema-hyperbook": "typescript-json-schema ../../packages/types/src/index.ts HyperbookJson --out ./schemas/hyperbook.schema.json --required",
    "compile:schema-hyperlibrary": "typescript-json-schema ../../packages/types/src/index.ts HyperlibraryJson --out ./schemas/hyperlibrary.schema.json --required",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "webpack --config ./webpack.extension.config.js --watch --mode development",
    "open": "code --extensionDevelopmentPath=$PWD",
    "pretest": "pnpm compile && pnpm lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@hyperbook/types": "workspace:*",
    "@types/glob": "8.1.0",
    "@types/node": "20.12.12",
    "@types/vscode": "1.71.0",
    "@typescript-eslint/eslint-plugin": "8.53.1",
    "@typescript-eslint/parser": "8.53.1",
    "@vscode/vsce": "3.7.1",
    "buffer": "6.0.3",
    "copy-webpack-plugin": "12.0.2",
    "css-loader": "7.1.2",
    "eslint": "9.39.2",
    "file-loader": "6.2.0",
    "glob": "11.0.1",
    "node-polyfill-webpack-plugin": "^4.1.0",
    "npm-run-all": "4.1.5",
    "ovsx": "0.10.8",
    "prettier": "3.4.2",
    "sass": "1.97.3",
    "sass-loader": "16.0.6",
    "style-loader": "4.0.0",
    "ts-loader": "9.5.4",
    "typescript": "5.7.3",
    "typescript-json-schema": "0.67.1",
    "webpack": "5.97.1",
    "webpack-cli": "6.0.1"
  },
  "dependencies": {
    "@hyperbook/fs": "workspace:*",
    "@hyperbook/markdown": "workspace:*",
    "create-hyperbook": "workspace:*"
  },
  "vsce": {
    "dependencies": false,
    "skipDuplicate": true
  }
}
