{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "definitions": {
        "Language": {
            "enum": [
                "de",
                "en",
                "es",
                "fr",
                "it",
                "nl",
                "pt"
            ],
            "type": "string"
        },
        "Link": {
            "anyOf": [
                {
                    "$ref": "#/definitions/LinkWithLinks"
                },
                {
                    "properties": {
                        "href": {
                            "type": "string"
                        },
                        "icon": {
                            "type": "string"
                        },
                        "label": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "href",
                        "label"
                    ],
                    "type": "object"
                }
            ]
        },
        "LinkWithLinks": {
            "properties": {
                "icon": {
                    "type": "string"
                },
                "label": {
                    "type": "string"
                },
                "links": {
                    "items": {
                        "$ref": "#/definitions/Link"
                    },
                    "type": "array"
                }
            },
            "required": [
                "label",
                "links"
            ],
            "type": "object"
        }
    },
    "properties": {
        "author": {
            "properties": {
                "name": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "basePath": {
            "type": "string"
        },
        "colors": {
            "properties": {
                "brand": {
                    "format": "color-hex",
                    "type": "string"
                },
                "brandDark": {
                    "format": "color-hex",
                    "type": "string"
                },
                "brandText": {
                    "format": "color-hex",
                    "type": "string"
                },
                "inverted": {
                    "type": "boolean"
                }
            },
            "type": "object"
        },
        "description": {
            "type": "string"
        },
        "elements": {
            "properties": {
                "bookmarks": {
                    "anyOf": [
                        {
                            "properties": {
                                "version": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        {
                            "enum": [
                                false
                            ],
                            "type": "boolean"
                        }
                    ]
                },
                "excalidraw": {
                    "allOf": [
                        {
                            "properties": {
                                "version": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        },
                        {
                            "properties": {
                                "aspectRation": {
                                    "type": "string"
                                },
                                "autoZoom": {
                                    "type": "boolean"
                                },
                                "center": {
                                    "type": "boolean"
                                },
                                "edit": {
                                    "type": "boolean"
                                }
                            },
                            "type": "object"
                        }
                    ]
                }
            },
            "type": "object"
        },
        "font": {
            "type": "string"
        },
        "fonts": {
            "properties": {
                "body": {
                    "type": "string"
                },
                "code": {
                    "type": "string"
                },
                "heading": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "language": {
            "$ref": "#/definitions/Language"
        },
        "license": {
            "type": "string"
        },
        "links": {
            "items": {
                "$ref": "#/definitions/Link"
            },
            "type": "array"
        },
        "logo": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "repo": {
            "type": "string"
        },
        "template": {
            "type": "string"
        }
    },
    "required": [
        "name"
    ],
    "type": "object"
}

